<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="SuspiciusApp.Views.LoginPage">
    <StackLayout Orientation="Vertical" VerticalOptions="Center" Padding="3">
        <Image Source="login.png" />
        <Entry x:Name="Usuario" Placeholder="Usuario" />
        <Entry x:Name="Password" Placeholder="Contraseña" IsPassword="True" />
        <Button Text="Ingresar"  Clicked="Ingresar_Click" />
    </StackLayout>
</ContentPage>