<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuspiciusApp.Views.LoginPage">
    <StackLayout Orientation="Vertical" VerticalOptions="Center">
        <Image Source="cinema.png" />
        <Entry x:Name="Usuario" Placeholder="{tdr:Translate Usuario}" />
        <Entry x:Name="Password" Placeholder="{tdr:Translate Contrasena}" IsPassword="True" />
        <Button Text="{tdr:Translate Ingresar}" Clicked="Ingresar_Click" />
    </StackLayout>
</ContentPage>